pipeline {
    agent any

    environment {
        IMAGE_NAME = "my-python-flask-app"
        TAG = "latest"
    }

    stages {

        stage('Checkout') {
            steps {
                script {
                    try {
                        echo "Checking out code..."
                        checkout scm
                        echo "Checkout succeeded"
                    } catch (Exception e) {
                        echo "Checkout failed: ${e.getMessage()}"
                        error("Stopping pipeline due to checkout failure")
                    } finally {
                        echo "Checkout stage completed"
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    try {
                        echo "Building Docker image..."
                        sh """
                            cp python-flask-app/Dockerfile ./
                            cp python-flask-app/requirements.txt ./
                            cp python-flask-app/static/style.css ./
                            cp python-flask-app/templates/index.html ./
                            cp python-flask-app/app.py ./
                            docker build -t ${IMAGE_NAME}:${TAG} .
                        """
                        echo "Docker image built successfully"
                    } catch (Exception e) {
                        echo "Docker build failed: ${e.getMessage()}"
                        error("Stopping pipeline due to build failure")
                    } finally {
                        echo "Build stage completed"
                    }
                }
            }
        }

        stage('Run Container') {
            steps {
                script {
                    try {
                        echo "Running container..."
                        sh """
                            docker rm -f flaskapp || true
                            docker run -d -p 5000:5000 --name flaskapp ${IMAGE_NAME}:${TAG}
                        """
                        echo "Container started successfully"
                    } catch (Exception e) {
                        echo "Container run failed: ${e.getMessage()}"
                        error("Stopping pipeline due to container failure")
                    } finally {
                        echo "Run Container stage completed"
                    }
                }
            }
        }

        stage('Verify') {
            steps {
                echo "App should be running at: http://localhost:5000"
            }
        }
    }

    post {
        always {
            echo "Pipeline completed (success or failure)"
        }
        success {
            echo "Pipeline SUCCESS ✅"
        }
        failure {
            echo "Pipeline FAILED ❌"
        }
    }
}
